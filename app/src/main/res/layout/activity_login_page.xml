<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.loginPage"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/backgroundLogin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/loginbackground" />

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="-10dp"
        android:layout_below="@id/loginTitle"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/applogo" />

    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find My First Aid"
        android:textColor="@color/backgroundWhite"
        android:fontFamily="sans-serif-light"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="88dp" />

    <Button
        android:id="@+id/forgotBtn"
        android:layout_width="150dp"
        android:textSize="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/primarybackgroundbutton"
        android:text="Forgotten Password?"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passwordField"
        android:textColor="@color/backgroundWhite"
        android:fontFamily="sans-serif-light"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="560dp" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:ems="10"
        android:textColor="@color/blackcolour"
        android:textColorHint="@color/blackcolour"
        android:background="@drawable/loginfields"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/emailField"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:textAlignment="textStart"
        android:paddingBottom="5dp"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="284dp" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="302dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Email"
        android:textColor="@color/blackcolour"
        android:textColorHint="@color/blackcolour"
        android:background="@drawable/loginfields"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:textAlignment="textStart"
        android:layout_below="@id/applogo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="174dp" />

    <Button
        android:id="@+id/loginSubmit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbuttons"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/registerBtn"
        android:layout_marginTop="50dp"
        android:text="Submit"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="416dp" />


    <Button
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/primarybackgroundbutton"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:layout_below="@id/passwordField"
        android:layout_marginTop="130dp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="488dp" />






</RelativeLayout>